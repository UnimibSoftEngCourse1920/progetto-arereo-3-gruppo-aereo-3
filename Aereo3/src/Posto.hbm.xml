<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "dominio.Posto" table = "posto">
      
      <meta attribute = "class-description">
        Questa classe contiene i dati dei posti
      </meta>
      
      
      <property name ="fila" column = "fila" type = "int"/>
      <property name = "lettera" column = "lettera" type = "char"/>
      <property name = "prezzo" column = "prezzo" type = "double"/>
      <property name = "punti" column = "punti" type = "int"/>
      <property name ="prezzoPunti" column = "prezzo_punti" type = "int"/>
      
   </class>
</hibernate-mapping>