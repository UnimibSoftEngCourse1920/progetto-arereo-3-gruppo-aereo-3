<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "dominio.Volo" table = "volo">
      
      <meta attribute = "class-description">
        Questa classe contiene i dati dei posti
      </meta>
      <!-- Da mappare -->
      
      <property name ="idVolo" column = "id_volo" type = "string"/>
      <property name = "destinazione" column = "destinazione" type = "string"/>
      <property name = "partenza" column = "partenza" type = "string"/>
      <property name = "dataPartenza" column = "data_partenza" type = "date"/>
      <property name ="dataRitorno" column = "data_ritorno" type = "date"/>
      <property name ="numeroPosti" column = "n_posti" type = "int"/>
      <property name ="gate" column = "gate" type = "string"/>
      
      
   </class>
</hibernate-mapping>