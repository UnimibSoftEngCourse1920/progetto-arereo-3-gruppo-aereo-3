<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "dominio.Promozione" table = "promozione">
      
      <meta attribute = "class-description">
        Questa classe contiene i dati delle promozioni
      </meta>
      <!-- Da mappare anche sconto? -->
     
      
      <property name ="dataInizio" column = "data_inizio" type = "date"/>
      <property name = "dataFine" column = "data_fine" type = "date"/>
      <property name = "messaggio" column = "messaggio" type = "string"/>

      
   </class>
</hibernate-mapping>