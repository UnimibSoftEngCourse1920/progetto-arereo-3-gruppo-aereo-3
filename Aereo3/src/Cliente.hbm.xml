<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "dominio.Cliente" table = "cliente">
      
      <meta attribute = "class-description">
        Questa classe contiene i dati di clienti
      </meta>
      
      
      <property name ="codCliente" column = "cod_cliente" type = "string"/>
      <property name = "nome" column = "nome" type = "string"/>
      <property name = "dataDiNascita" column = "data_di_nascita" type = "date"/>
      <property name = "email" column = "email" type = "string"/>
      <property name = "indirizzo" column = "indirizzo" type = "string"/>
      
   </class>
</hibernate-mapping>